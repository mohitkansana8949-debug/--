
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Authenticated users can read public data
    match /courses/{courseId} {
      allow read: if request.auth != null;
      allow write: if exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }

    match /educators/{educatorId} {
      allow read: if request.auth != null;
      allow write: if exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }
    
    match /promotions/{promotionId} {
        allow read: if request.auth != null;
        allow write: if exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }
    
    match /settings/payment {
      allow read: if request.auth != null;
      allow write: if exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }

    // Users can read/write their own data
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth.uid == userId;
    }

    // Rules for course enrollments
    match /courseEnrollments/{enrollmentId} {
        // User can create their own enrollment document
        allow create: if request.auth.uid == request.resource.data.userId;
        
        // User can read their own enrollments
        allow read: if request.auth.uid == resource.data.userId;

        // Admin can read/update/delete any enrollment
        allow read, update, delete: if exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }
    
    // Admins can list enrollments and users.
    match /courseEnrollments/{enrollment} {
        allow list: if exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }

    match /users/{userId} {
        allow list: if exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }
  }
}
